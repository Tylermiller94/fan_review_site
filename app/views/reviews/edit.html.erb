<%= render "layouts/errors", :object => @review %>

<%= form_for [@movie,@review] do |f| %>
  <div class="form-group">
    <%= f.label :author, class: "control-label"%>
    <%= f.text_field :author %>
  </div>
  <div class="form-group">
    <%= f.label :rating, class: "control-label" %>
    <%= f.text_field :rating %>
  </div>
  <div class="form-group">
    <%= f.label :content_body, class: "control-label" %>
    <%= f.text_area :content_body %>
  </div>
  <%= f.submit class: "button" %>
<% end %>
