<%= render 'layouts/errors', :object => @movie %>

<%= form_for @movie do |f| %>

    <div class="form-group">
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: "form" %>
    </div>
    <div class="form-group">
      <%= f.label :release, class: "control-label" %>
      <%= f.text_field :release, class: "form" %>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "control-label" %>
      <%= f.text_field :description, class: "form" %>
    </div>
    <%= f.submit class: "button" %>

<% end %>
