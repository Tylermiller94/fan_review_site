<h1> <%= @movie.name %> </h1>
<h3>Release Date: <%= @movie.release %> </h3>
<h3>Description: <%= @movie.description %> </h3>


<h4>User Reviews:</h4>

  <% @movie.reviews.each do |review| %>
    <div class="container">
      <em> <%= review.author %> </em>
      <p>Rating: <%= review.rating %> out of 5 </p>
      <p> <%= review.content_body %> </p>
    </div>
  <% end %>
<% end %>

<%= link_to "Add Review", new_movie_review_path(@movie) %>


<%= link_to "Delete", movie_path(@movie), data: {
confirm: "Remove permanently?",
method: "delete"
} %>
